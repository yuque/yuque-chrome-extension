{
  "manifest_version": 3,
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "description": "语雀浏览器知识管理插件，支持剪藏页面文本和图片，截图OCR识别文字，可划词剪藏、翻译，侧边栏写笔记，并存到语雀。",
  "action": {},
  "content_scripts": [
    {
      "js": [
        "content-scripts.js"
      ],
      "matches": [
        "<all_urls>",
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "yuque-logo-16.png",
    "32": "yuque-logo-32.png",
    "48": "yuque-logo-48.png",
    "128": "yuque-logo-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content-scripts.css",
        "editor.html",
        "sidePanel.html",
        "doc.css",
        "doc.umd.js",
        "CodeMirror.js",
        "katex.min.js",
        "tracert_a385.js",
        "yuque-transform-script.js"
      ],
      "matches": [
        "<all_urls>",
        "*://*/*"
      ]
    }
  ],
  "content_security_policy": {
    "script-src": "'self' 'unsafe-eval'",
    "object-src": "'self'"
  },
  "host_permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "background",
    "contextMenus",
    "cookies",
    "storage",
    "tabs",
    "webRequest",
    "scripting",
    "sidePanel"
  ],
  "side_panel": {
     "default_path": "sidePanel.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      }
    },
    "selectArea": {
      "description": "选取剪藏"
    },
    "startOcr": {
      "description": "OCR 提取"
    },
    "collectLink": {
      "description": "收藏链接"
    }
  }
}
