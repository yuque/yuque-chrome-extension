{
  "manifest_version": 3,
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "action": {},
  "content_scripts": [
    {
      "js": [
        "content-scripts.js"
      ],
      "matches": [
        "<all_urls>",
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "yuque-logo-16.png",
    "32": "yuque-logo-32.png",
    "48": "yuque-logo-48.png",
    "128": "yuque-logo-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sandbox.html",
        "editor.html",
        "doc.css",
        "doc.umd.js",
        "CodeMirror.js",
        "katex.min.js",
        "tracert_a385.js"
      ],
      "matches": [
        "<all_urls>",
        "*://*/*"
      ]
    }
  ],
  "commands": {
    "OnAreaSelect": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "剪藏选取的内容"
    },
    "OnBookmarkSelect": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "剪藏网址"
    }
  },
  "content_security_policy": {
    "script-src": "'self' 'unsafe-eval'",
    "object-src": "'self'"
  },
  "host_permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "background",
    "commands",
    "contextMenus",
    "cookies",
    "storage",
    "tabs",
    "webRequest",
    "scripting"
  ]
}
